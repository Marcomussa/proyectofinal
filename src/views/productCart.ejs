<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs', {'title': 'carrito'}) %> 
<body>
    <%- include('./partials/header.ejs') %> 
    <section class="contenedorCarrito">
        <h3>Carrito</h3>
        <div class="contenedorCarritoProducto">
            <p>Producto:</p>
            <p>Precio:</p>
            <p>Cantidad:</p>
            <p>Subtotal:</p>
        </div>
        <div class="contenedorCarritoDetallesProducto">
            <div>
                <p>XX</p>
            </div>
            <p>XX</p>
            <p>XX</p> 
            <p>XX</p>
        </div>
        <div class="inputsCarrito">
            <input type="text" placeholder="Codigo de Cupon">
            <button class='btnMain' onclick="
            Swal.fire({
              position: 'center',
              icon: 'info',
              title: 'Descuento aplicado',
              showConfirmButton: false,
              timer: 1500
            })">Aplicar Descuento</button>
        </div>
        <div class="contenedorTotalCarrito">
            <div class="descripcionTotalCarrito">
                <span>Total:</span>
                <span class="precioFinal">XX</span>
            </div>
            <div>
                <button class="btnMain2" onclick="Swal.fire({
                    title: 'Compra realizada!',
                    width: 600,
                    timer: 3000,
                    padding: '3em',
                    color: '#716add',
                    background: '#fff',
                    backdrop: `
                      rgba(0,0,123,0.4)
                      url('/img/gif.gif')
                      left top
                      no-repeat
                    `
                  })">Finalizar Compra</button>
            </div>
        </div>
       
