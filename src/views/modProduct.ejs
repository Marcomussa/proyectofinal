<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs', {'title': 'Editor de productos'}) %> 
<body>
    <%- include('./partials/header.ejs') %> 

    <h2 class='productosH2'>Modificar Producto</h2>

    <form method='POST' action="/products/mod/<%- product.id %>?_method=PUT" class="formAgregar" enctype="multipart/form-data">
      <div class="agregarFoto profile-img">
        <img src="/img/addPhoto.png" alt="" />
        <div class="file btn btn-lg btn-primary">
          <span>Cambiar foto</span>
          <input type="file" name="imagenProducto" />
        </div>
      </div>
      <input name='name' class="createPForms" type="text" value="<%- product.name %>"  >
      <select name= 'category' class="formCategory" aria-label="Default select example">
        <option selected><%- product.category_id.name %></option>
        <option value="<%- product.category_id = 1 %>">Cpus</option>
        <option value="<%- product.category_id = 2 %>">Motherboards</option>
        <option value="<%- product.category_id = 3 %>">Placas de Video</option>
        <option value="<%- product.category_id = 4 %>">Memorias Ram</option>
        <option value="<%- product.category_id = 5 %>">Fuentes</option>
        <option value="<%- product.category_id = 6 %>">Perifericos</option>
        <option value="<%- product.category_id = 7 %>">Accesorios</option>
      </select> 
      <input name='price' class="createPForms" type="number" value="<%- product.price %>">
      <input name="discount"class="createPForms" type="number" value="<%- product.discount %>">
      <textarea class="createPForms" name="description" id="" cols="30" rows="4"><%= product.description %></textarea>
      <div> 
        <button type="submit" class="btn btn-primary btn-lg">Modificar Producto</button> 
        
       
        <!-- <form action=""></form>
        <a href="/"><button type="push" class="borrarproducto">Eliminar Producto</button></a> -->
       </div>
    </form>
 <div><form method="POST" action="/products/<%= product.id %>?_method=delete">
    <button type="submit" class="btn btn-danger">Eliminar producto</button>
    </form> </div>
  

    <%- include('./partials/footer.ejs') %> 
</body>
</html>